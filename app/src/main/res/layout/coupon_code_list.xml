<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/splash_screen" />

            <TextView
                android:id="@+id/coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/logo"
                android:paddingLeft="@dimen/_10sdp"
                android:text="FIRST30"
                android:textColor="@color/finestBlack"
                android:textSize="20sp" />

            <Button
                android:id="@+id/apply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:background="@color/transparent"
                android:textColor="@color/colorAccent"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_coupon"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:text="Get Free Delivery"
            android:textColor="@color/finestBlack"
            android:textSize="18sp" />

        <!--<View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/title"
            android:background="@color/finestBlack"
            android:layout_margin="@dimen/_5sdp"/>-->

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/finestBlack2"
            android:textSize="12sp"
            android:layout_below="@+id/title"/>

        <TextView
            android:id="@+id/tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="+ MORE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/desc"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>