<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_behavior="com.rndtechnosoft.foodcart.customs.AppBarFlingScrollBehavior">

        <FrameLayout
            app:layout_scrollFlags="scroll"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider_home_fragment"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="@dimen/_170sdp"
                        android:minHeight="@dimen/_150sdp"/>

                    <RelativeLayout
                        android:id="@+id/relativeLayout_detail_home_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/slider_home_fragment"
                        android:visibility="gone"
                        android:background="@color/colorPrimaryDark">

                        <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            layout="@layout/item_list"/>

                    </RelativeLayout>

                    <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBarHome"
                        android:layout_centerInParent="true" />




                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

<!--
        <include
